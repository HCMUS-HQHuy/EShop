{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./bin",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  // "files": [
  //   "./src/types/express.d.ts" //
  // ]
}